{
    "name": "dn_searchlayers",
    "version": "1.0.4",
    "title": "${bundleName}",
    "description": "${bundleDescription}",
    "vendor": "con terra GmbH",
    "productName": "devnet-mapapps-search-layers",
    "layer": "module",
    "i18n": [
        "bundle"
    ],
    "dependencies": {
        "store-api": "^4.12.0",
        "esri": "^4.20.0",
        "toc": "^4.12.0"
    },
    "CSS-Themes-Extension": [
        {
            "name": "*",
            "files": [
                "./css/styles.css"
            ]
        }
    ],
    "components": [
        {
            "name": "ActivateLayerAction",
            "provides": "map-actions.Action",
            "properties": {
                "tocEntryHighlightTime": 5000
            },
            "references": [
                {
                    "name": "_tocWidget",
                    "providing": "dijit.Widget",
                    "filter": "(widgetRole=tocWidget)"
                },
                {
                    "name": "_tocToggleTool",
                    "providing": "ct.tools.Tool",
                    "filter": "(id=tocToggleTool)"
                }
            ]
        },
        {
            "name": "SearchLayersStore",
            "provides": [
                "ct.api.Store"
            ],
            "propertiesConstructor": true,
            "properties": {
                "id": "searchlayersstore",
                "title": "${ui.storeTitle}",
                "description": "${ui.storeDescription}",
                "useIn": [
                    "search"
                ],
                "searchAttribute": "title",
                "searchLabel": "title",
                "idProperty": "uid",
                "metadata": {
                    "fields": [
                        {
                            "title": "UID",
                            "name": "uid",
                            "type": "string"
                        },
                        {
                            "title": "Layer Name",
                            "name": "title",
                            "type": "string"
                        }
                    ]
                }
            },
            "references": [
                {
                    "name": "_mapWidgetModel",
                    "providing": "map-widget.MapWidgetModel"
                },
                {
                    "name": "_tocWidget",
                    "providing": "dijit.Widget",
                    "filter": "(widgetRole=tocWidget)"
                }
            ]
        }
    ]
}
